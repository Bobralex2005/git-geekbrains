<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112" fx:controller="ru.geekbrains.chat.client.Controller">
    <TextArea fx:id="chatArea" editable="false" prefWidth="478.0" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="inputField" onAction="#sendMsg" promptText="Enter you message" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsg" text="Send message" />
    </HBox>
</VBox>
